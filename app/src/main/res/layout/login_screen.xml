<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:baselineAligned="false"
    android:background="@color/yellow_background">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewFlipper2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow_background">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:paddingRight="40dp"
                android:paddingBottom="10dp"
                android:showDividers="middle"
                android:divider="@drawable/logindividerbig"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:id="@+id/aaaaaaa">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/logo"
                    android:adjustViewBounds="false"
                    android:layout_marginBottom="30dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/logindivider"
                    android:showDividers="middle">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:gravity="center_vertical">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:inputType="textEmailAddress"
                            android:id="@+id/login_email"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:hint="Email Address"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/tick_login_email"
                            android:src="@drawable/tick_icon"
                            android:layout_margin="5dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:background="@drawable/brown_rounded_corners">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:id="@+id/login_password"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:hint="Password"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:textColorHint="#918d8d" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/tick_login_password"
                            android:src="@drawable/tick_icon"
                            android:layout_margin="5dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot password"
                        android:id="@+id/forgot_pass"
                        android:textColor="@color/brown"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New here? Sign Up"
                        android:id="@+id/signup_newhere"
                        android:textColor="@color/brown"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/login"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/pink_high_rounded_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOGIN"
                        android:id="@+id/login_tv"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:textIsSelectable="false" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow_background">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:divider="@drawable/signup_divider"
                    android:showDividers="middle"
                    android:paddingTop="20dp"
                    android:id="@+id/ls"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/fname_signup"
                            android:hint="First Name*"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:textColor="#918d8d"
                            android:background="#00000000"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/tick_signup_fname"
                            android:src="@drawable/tick_icon"
                            android:layout_margin="5dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:gravity="center"
                        android:padding="2dp">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/lname_signup"
                            android:hint="Last Name*"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:textColor="#918d8d"
                            android:background="#00000000"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/tick_signup_lname"
                            android:src="@drawable/tick_icon"
                            android:layout_margin="5dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:padding="2dp"
                        android:gravity="center">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="phone"
                            android:id="@+id/mobile_signup"
                            android:hint="Mobile Number*"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:autoText="false"
                            android:background="#00000000"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:padding="2dp"
                        android:gravity="center">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textEmailAddress"
                            android:id="@+id/email_signup"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="#00000000"
                            android:hint="Email"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:padding="2dp"
                        android:gravity="center_vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:id="@+id/pass_signup"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="#00000000"
                            android:hint="Password*"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="2dp"
                        android:id="@+id/area_list_signup">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/area_signup"
                            android:background="#00000000"
                            android:hint="Area*"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColorHint="#918d8d" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView26"
                            android:src="@drawable/down_arrow_black"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:padding="2dp"
                        android:gravity="center" >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/block_signup"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="#00000000"
                            android:hint="Block*"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:padding="2dp"
                        android:gravity="center" >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/street_signup"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="#00000000"
                            android:hint="Street*"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:padding="2dp"
                        android:gravity="center" >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/house_signup"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="#00000000"
                            android:hint="House/Building*"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:padding="2dp"
                        android:gravity="center" >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/floor_signup"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="#00000000"
                            android:hint="Floor Number"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/brown_rounded_corners"
                        android:padding="2dp"
                        android:gravity="center" >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/flat_signup"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="#00000000"
                            android:hint="Flat Number"
                            android:textColor="#918d8d"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="#918d8d"
                            android:textCursorDrawable = "@null"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout9"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pink_high_rounded_corners"
                    android:id="@+id/register"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REGISTER"
                        android:id="@+id/signup"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow_background"
            android:padding="10dp">

            <ListView
                android:id="@+id/signup_area_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/brown" />
        </LinearLayout>

    </ViewFlipper>

</LinearLayout>