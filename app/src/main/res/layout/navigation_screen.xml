<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navigation_drawer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container_main"
                android:background="@color/yellow_background"
                android:layout_marginTop="33dp"></FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/splash_top"
                android:layout_alignParentEnd="true"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/menu_back"
                    android:src="@drawable/ic_back"
                    android:adjustViewBounds="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/menu_buttion"
                    android:src="@drawable/ic_menu"
                    android:adjustViewBounds="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <in.yellowsoft.darabeel.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AR"
                    android:id="@+id/nav_waste"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:layout_marginBottom="10dp">

                    <in.yellowsoft.darabeel.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/nav_title"
                        android:gravity="center"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/back"
                    android:src="@drawable/ic_back"
                    android:adjustViewBounds="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lng_white_rounded_corners"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:id="@+id/lang_nav_ll"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <in.yellowsoft.darabeel.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AR"
                        android:id="@+id/lang_nav_tv"
                        android:textColor="#512918"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/search_icon"
                    android:src="@drawable/ic_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />

                <in.yellowsoft.darabeel.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:id="@+id/logout"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:background="@color/brown"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/cart_icon"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cart_icon_white"
                    android:visibility="gone" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/filter_white_rounded_corners"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:id="@+id/nav_filter"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView18"
                        android:src="@drawable/filter_icon"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#71422a"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logo"
            android:layout_marginBottom="30dp"
            android:visibility="gone" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mdrawerlist1"
            android:layout_marginTop="15dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"></LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mdrawerlist2"
            android:visibility="gone" />

        <in.yellowsoft.darabeel.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyrights  Darabeel  2016"
            android:id="@+id/in.yellowsoft.darabeel.MyTextView23"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
