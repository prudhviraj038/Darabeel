<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/com_ll">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hgjgh"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:layout_margin="2dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/com_list_logo"
                            android:src="@drawable/img_restaurants"
                            android:adjustViewBounds="true"
                            android:padding="4dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView15"
                            android:src="@drawable/home_rounded_corners" />

                    </FrameLayout>

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/img_offer"
                        android:layout_alignParentEnd="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/active_img"
                        android:layout_alignParentStart="false"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="false"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/rating_com_list_item"
                    android:divider="@drawable/rating_divider"
                    android:showDividers="middle|end"
                    android:gravity="center" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angelato"
                    android:id="@+id/company_list_name"
                    android:textColor="@color/pink_text"
                    android:textSize="18sp"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/com_status"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#ffffd857"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desserts, Chocolates, Shakes, Arabic Sweets..."
                android:id="@+id/company_list_items"
                android:textColor="#3b3b3b"
                android:textSize="12dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Order amount"
                    android:id="@+id/min_order_item"
                    android:textColor="@color/black_text"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:id="@+id/textView"
                    android:textColor="@color/black_text"
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 KD"
                    android:id="@+id/travel_charge"
                    android:textSize="15dp"
                    android:textColor="@color/black_text"
                    android:layout_weight="1"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Time"
                    android:id="@+id/item_delivery_time"
                    android:textColor="@color/black_text"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:id="@+id/textView5"
                    android:textColor="@color/black_text"
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1Hr"
                    android:id="@+id/time_com_list"
                    android:textSize="15sp"
                    android:textColor="@color/black_text"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment type"
                    android:id="@+id/item_payment"
                    android:textColor="@color/black_text"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:id="@+id/textView6"
                    android:textColor="@color/black_text"
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/payment_com_item">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#44ff00bb"></LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/line_img"
            android:scaleType="matrix"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>